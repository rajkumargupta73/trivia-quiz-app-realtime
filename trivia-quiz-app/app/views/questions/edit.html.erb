<h3>Question Edit Form</h3>


<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red"><%= error %></p>
    <%end%> 
<%end%>
 
<%= form_for @question do |f| %>
    <div class="form-group">
    <%= f.label :question %>
    <%= f.text_field :question, class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :wrong_answer1 %>
    <%= f.text_field :wrong_answer1, class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :wrong_answer2 %>
    <%= f.text_field :wrong_answer2, class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :wrong_answer3 %>
    <%= f.text_field :wrong_answer3, class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :right_answer %>
    <%= f.text_field :right_answer, class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :difficulty %>
    <%= f.text_field :difficulty, class:"form-control" %>
    </div>
  
    <%= f.submit 'submit', :class => 'btn btn-primary' %>
    
<%end%>   